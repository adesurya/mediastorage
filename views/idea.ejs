<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Idea Generator - SIJAGO+ AI</title>
  <link rel="icon" type="image/png" href="data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAEAAAABCAYAAAAfFcSJAAAADUlEQVR42mNk+M9QDwADhgGAWjR9awAAAABJRU5ErkJggg==">
  <link rel="stylesheet" href="/css/style.css">
  <style>
    /* Main container adjustment for sidebar */
    .main-container {
      margin-left: 240px;
      transition: margin-left 0.3s ease;
    }

    @media (max-width: 768px) {
      .main-container {
        margin-left: 0;
      }
    }

    .idea-container {
      display: grid;
      grid-template-columns: 300px 1fr;
      gap: 0;
      height: calc(100vh - 4rem);
      background: var(--white);
      border-radius: var(--radius-lg);
      box-shadow: var(--shadow-lg);
      overflow: hidden;
    }
    
    .chat-sidebar {
      background: var(--gray-50);
      border-right: 1px solid var(--gray-200);
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }
    
    .sidebar-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--gray-200);
    }
    
    .new-chat-btn {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      gap: 0.5rem;
      padding: 0.75rem 1rem;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      color: var(--white);
      border: none;
      border-radius: var(--radius);
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);
    }
    
    .new-chat-btn:hover {
      transform: translateY(-2px);
      box-shadow: var(--shadow-md);
    }
    
    .chat-history {
      flex: 1;
      overflow-y: auto;
      padding: 1rem;
    }
    
    .chat-history::-webkit-scrollbar {
      width: 6px;
    }
    
    .chat-history::-webkit-scrollbar-thumb {
      background: var(--gray-300);
      border-radius: 10px;
    }
    
    .chat-item {
      padding: 0.875rem 1rem;
      margin-bottom: 0.5rem;
      border-radius: var(--radius);
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.5rem;
      background: var(--white);
      border: 1px solid var(--gray-200);
    }
    
    .chat-item:hover {
      background: var(--gray-100);
      transform: translateX(4px);
    }
    
    .chat-item.active {
      background: linear-gradient(135deg, rgba(99, 102, 241, 0.1), rgba(139, 92, 246, 0.1));
      border-color: var(--primary);
    }
    
    .chat-item-content {
      flex: 1;
      min-width: 0;
    }
    
    .chat-item-title {
      font-weight: 600;
      color: var(--gray-900);
      font-size: 0.875rem;
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }
    
    .chat-item-meta {
      font-size: 0.75rem;
      color: var(--gray-500);
      margin-top: 0.25rem;
    }
    
    .chat-item-delete {
      opacity: 0;
      padding: 0.25rem 0.5rem;
      background: var(--danger);
      color: var(--white);
      border: none;
      border-radius: var(--radius-sm);
      cursor: pointer;
      transition: var(--transition);
      font-size: 0.75rem;
    }
    
    .chat-item:hover .chat-item-delete {
      opacity: 1;
    }
    
    .chat-main {
      display: flex;
      flex-direction: column;
      background: var(--white);
      height: 100%;
      overflow: hidden;
    }
    
    .chat-header {
      padding: 1.5rem;
      border-bottom: 1px solid var(--gray-200);
      display: flex;
      align-items: center;
      gap: 1rem;
      flex-shrink: 0;
    }
    
    .chat-header-content {
      flex: 1;
    }
    
    .chat-title {
      font-size: 1.125rem;
      font-weight: 700;
      color: var(--gray-900);
    }
    
    .chat-subtitle {
      font-size: 0.875rem;
      color: var(--gray-500);
      margin-top: 0.25rem;
    }
    
    .mobile-menu-btn {
      display: none;
      width: 40px;
      height: 40px;
      background: var(--gray-100);
      border: none;
      border-radius: var(--radius);
      cursor: pointer;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      gap: 4px;
      transition: var(--transition);
      flex-shrink: 0;
    }
    
    .mobile-menu-btn:hover {
      background: var(--gray-200);
    }
    
    .mobile-menu-btn span {
      width: 20px;
      height: 2px;
      background: var(--gray-700);
      border-radius: 2px;
      transition: var(--transition);
    }
    
    .mobile-menu-btn.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }
    
    .mobile-menu-btn.active span:nth-child(2) {
      opacity: 0;
    }
    
    .mobile-menu-btn.active span:nth-child(3) {
      transform: rotate(-45deg) translate(5px, -5px);
    }
    
    .chat-messages {
      flex: 1;
      overflow-y: auto;
      overflow-x: hidden;
      padding: 2rem;
      scroll-behavior: smooth;
      min-height: 0;
      background: var(--white);
    }
    
    .chat-messages::-webkit-scrollbar {
      width: 8px;
    }
    
    .chat-messages::-webkit-scrollbar-thumb {
      background: var(--gray-300);
      border-radius: 10px;
    }
    
    .message {
      margin-bottom: 1.5rem;
      display: flex;
      gap: 1rem;
      animation: fadeInUp 0.3s ease-out;
    }
    
    @keyframes fadeInUp {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }
    
    .message-avatar {
      width: 40px;
      height: 40px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 700;
      font-size: 1rem;
      flex-shrink: 0;
    }
    
    .message.user .message-avatar {
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      color: var(--white);
    }
    
    .message.assistant .message-avatar {
      background: var(--gray-200);
      color: var(--gray-700);
    }
    
    .message-content {
      flex: 1;
      min-width: 0;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    .message-role {
      font-weight: 600;
      color: var(--gray-900);
      font-size: 0.875rem;
      margin-bottom: 0.5rem;
    }
    
    .message-text {
      color: var(--gray-700);
      line-height: 1.6;
      white-space: pre-wrap;
      word-wrap: break-word;
      overflow-wrap: break-word;
    }
    
    .message.user .message-text {
      background: var(--gray-50);
      padding: 1rem;
      border-radius: var(--radius);
    }
    
    .message-actions {
      margin-top: 0.75rem;
      display: flex;
      gap: 0.5rem;
    }
    
    .copy-btn {
      padding: 0.5rem 0.875rem;
      background: var(--gray-100);
      border: 1px solid var(--gray-200);
      border-radius: var(--radius-sm);
      color: var(--gray-700);
      font-size: 0.8125rem;
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      gap: 0.375rem;
    }
    
    .copy-btn:hover {
      background: var(--gray-200);
    }
    
    .copy-btn.copied {
      background: var(--success);
      color: var(--white);
      border-color: var(--success);
    }
    
    .typing-indicator {
      display: flex;
      gap: 0.375rem;
      padding: 1rem;
      background: var(--gray-50);
      border-radius: var(--radius);
      width: fit-content;
    }
    
    .typing-dot {
      width: 8px;
      height: 8px;
      background: var(--gray-400);
      border-radius: 50%;
      animation: typing 1.4s infinite;
    }
    
    .typing-dot:nth-child(2) { animation-delay: 0.2s; }
    .typing-dot:nth-child(3) { animation-delay: 0.4s; }
    
    @keyframes typing {
      0%, 60%, 100% { transform: translateY(0); opacity: 0.5; }
      30% { transform: translateY(-10px); opacity: 1; }
    }
    
    .empty-state {
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100%;
      color: var(--gray-400);
      text-align: center;
      padding: 2rem;
    }
    
    .empty-state-icon {
      font-size: 5rem;
      margin-bottom: 1rem;
      opacity: 0.5;
    }
    
    .empty-state-title {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--gray-600);
      margin-bottom: 0.5rem;
    }
    
    .empty-state-text {
      font-size: 0.9375rem;
      color: var(--gray-500);
    }
    
    .chat-input-area {
      padding: 1.5rem;
      border-top: 1px solid var(--gray-200);
      background: var(--white);
      flex-shrink: 0;
    }
    
    .chat-input-form {
      display: flex;
      gap: 0.5rem;
      align-items: flex-end;
    }
    
    .chat-input-wrapper {
      flex: 1;
    }
    
    .chat-input {
      width: 100%;
      min-height: 50px;
      max-height: 150px;
      padding: 0.875rem 1rem;
      border: 1px solid var(--gray-200);
      border-radius: var(--radius-lg);
      font-size: 0.9375rem;
      font-family: inherit;
      resize: none;
      transition: var(--transition);
    }
    
    .chat-input:focus {
      outline: none;
      border-color: var(--primary);
      box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
    }
    
    .chat-input:disabled {
      background: var(--gray-50);
      cursor: not-allowed;
    }
    
    .send-btn {
      padding: 0.875rem 1.5rem;
      background: linear-gradient(135deg, var(--primary), var(--secondary));
      color: var(--white);
      border: none;
      border-radius: var(--radius-lg);
      font-weight: 600;
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      white-space: nowrap;
    }
    
    .send-btn:hover:not(:disabled) {
      transform: translateY(-2px);
      box-shadow: var(--shadow-lg);
    }
    
    .send-btn:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }
    
    .mobile-overlay {
      display: none;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(255, 255, 255, 0.95);
      z-index: 998;
      backdrop-filter: blur(4px);
      -webkit-backdrop-filter: blur(4px);
    }
    
    .mobile-overlay.active {
      display: block;
      animation: fadeIn 0.3s ease;
    }
    
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    
    @media (max-width: 768px) {
      .main-container { 
        padding: 0 !important; 
        max-width: 100% !important;
        margin: 0 !important;
      }
      
      .idea-container {
        grid-template-columns: 1fr;
        height: calc(100vh - 4rem);
        border-radius: 0;
      }
      
      .chat-sidebar {
        position: fixed;
        top: 4rem;
        left: -320px;
        bottom: 0;
        width: 280px;
        z-index: 999;
        transition: left 0.3s ease;
        box-shadow: 2px 0 20px rgba(0, 0, 0, 0.3);
      }
      
      .chat-sidebar.mobile-open { 
        left: 0;
        animation: slideInLeft 0.3s ease;
      }
      
      @keyframes slideInLeft {
        from { left: -320px; }
        to { left: 0; }
      }
      
      .mobile-menu-btn { display: flex; }
      .chat-header { padding: 1rem; }
      .chat-messages { 
        padding: 1rem; 
        background: var(--white);
      }
      .chat-input-area { 
        padding: 1rem;
        background: var(--white);
        border-top: 2px solid var(--gray-200);
      }
      .message { gap: 0.75rem; }
      .message-avatar {
        width: 32px;
        height: 32px;
        font-size: 0.875rem;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/sidebar', { user: user, currentPage: 'idea' }) %>
  
  <div class="main-container" style="max-width: 1800px; padding: 1rem;">
    <div class="mobile-overlay" id="mobileOverlay" onclick="toggleChatSidebar()"></div>
    <div class="idea-container">
      <div class="chat-sidebar" id="chatSidebar">
        <div class="sidebar-header">
          <button class="new-chat-btn" onclick="createNewChat()">
            <span>‚ûï</span><span>New Idea</span>
          </button>
        </div>
        <div class="chat-history" id="chatHistory">
          <% if (chats.length > 0) { %>
            <% chats.forEach(chat => { %>
              <div class="chat-item" data-chat-id="<%= chat.id %>" onclick="loadChat(<%= chat.id %>)">
                <div class="chat-item-content">
                  <div class="chat-item-title"><%= chat.title %></div>
                  <div class="chat-item-meta"><%= chat.message_count %> messages</div>
                </div>
                <button class="chat-item-delete" onclick="deleteChat(event, <%= chat.id %>)">üóëÔ∏è</button>
              </div>
            <% }); %>
          <% } else { %>
            <div style="text-align: center; padding: 2rem 1rem; color: var(--gray-400);">
              <div style="font-size: 2rem; margin-bottom: 0.5rem;">üí≠</div>
              <div style="font-size: 0.875rem;">No chats yet</div>
            </div>
          <% } %>
        </div>
      </div>
      <div class="chat-main">
        <div class="chat-header">
          <button class="mobile-menu-btn" id="mobileMenuBtn" onclick="toggleChatSidebar()">
            <span></span><span></span><span></span>
          </button>
          <div class="chat-header-content">
            <h2 class="chat-title" id="chatTitle">TikTok Content Idea Generator</h2>
            <p class="chat-subtitle">Dapatkan ide konten TikTok profesional dan edukatif</p>
          </div>
        </div>
        <div class="chat-messages" id="chatMessages">
          <div class="empty-state" id="emptyState">
            <div class="empty-state-icon">üí°</div>
            <h3 class="empty-state-title">Mulai Chat Baru</h3>
            <p class="empty-state-text">
              Masukkan keyword atau topik produk yang ingin kamu buat kontennya.<br>
              AI akan membantu membuat ide konten TikTok yang profesional dan menarik.
            </p>
          </div>
        </div>
        <div class="chat-input-area">
          <form class="chat-input-form" id="chatForm" onsubmit="sendMessage(event)">
            <div class="chat-input-wrapper">
              <textarea class="chat-input" id="messageInput" 
                placeholder="Keyword produk atau topik yang ingin dibuat kontennya..."
                rows="1" required></textarea>
            </div>
            <button type="submit" class="send-btn" id="sendBtn">
              <span>üì§</span><span>Send</span>
            </button>
          </form>
        </div>
      </div>
    </div>
  </div>
  
  <%- include('partials/footer') %>
  
  <script>
    let currentChatId = null;
    let isStreaming = false;
    let shouldAutoScroll = true;
    let isNewChat = false;

    function toggleChatSidebar() {
      const chatSidebar = document.getElementById('chatSidebar');
      const overlay = document.getElementById('mobileOverlay');
      const menuBtn = document.getElementById('mobileMenuBtn');
      chatSidebar.classList.toggle('mobile-open');
      overlay.classList.toggle('active');
      if (menuBtn) menuBtn.classList.toggle('active');
    }

    const messageInput = document.getElementById('messageInput');
    messageInput.addEventListener('input', function() {
      this.style.height = 'auto';
      this.style.height = Math.min(this.scrollHeight, 150) + 'px';
    });

    const chatMessages = document.getElementById('chatMessages');
    chatMessages.addEventListener('scroll', function() {
      const threshold = 100;
      const position = this.scrollHeight - this.scrollTop - this.clientHeight;
      shouldAutoScroll = position < threshold;
    });

    function createNewChat() {
      currentChatId = null;
      isNewChat = true;
      document.getElementById('chatMessages').innerHTML = `
        <div class="empty-state" id="emptyState">
          <div class="empty-state-icon">üí°</div>
          <h3 class="empty-state-title">Mulai Chat Baru</h3>
          <p class="empty-state-text">
            Masukkan keyword atau topik produk yang ingin kamu buat kontennya.<br>
            AI akan membantu membuat ide konten TikTok yang profesional dan menarik.
          </p>
        </div>
      `;
      document.getElementById('chatTitle').textContent = 'New Chat';
      document.querySelectorAll('.chat-item').forEach(item => item.classList.remove('active'));
      messageInput.focus();
      if (window.innerWidth <= 768) toggleChatSidebar();
    }

    async function loadChat(chatId) {
      try {
        const response = await fetch(`/idea/api/chats/${chatId}`);
        const result = await response.json();
        if (result.success) {
          currentChatId = chatId;
          isNewChat = false;
          document.querySelectorAll('.chat-item').forEach(item => item.classList.remove('active'));
          document.querySelector(`[data-chat-id="${chatId}"]`)?.classList.add('active');
          document.getElementById('chatTitle').textContent = result.data.chat.title;
          displayMessages(result.data.messages);
          if (window.innerWidth <= 768) toggleChatSidebar();
        }
      } catch (error) {
        console.error('Error loading chat:', error);
        alert('Failed to load chat');
      }
    }

    function displayMessages(messages) {
      const chatMessages = document.getElementById('chatMessages');
      chatMessages.innerHTML = '';
      
      if (messages.length === 0) {
        chatMessages.innerHTML = `
          <div class="empty-state" id="emptyState">
            <div class="empty-state-icon">üí°</div>
            <h3 class="empty-state-title">Mulai Chat Baru</h3>
            <p class="empty-state-text">
              Masukkan keyword atau topik produk yang ingin kamu buat kontennya.<br>
              AI akan membantu membuat ide konten TikTok yang profesional dan menarik.
            </p>
          </div>
        `;
        return;
      }
      
      messages.forEach(msg => appendMessage(msg.role, msg.content, false));
      scrollToBottom(true);
    }

    function appendMessage(role, content, animate = true) {
      const chatMessages = document.getElementById('chatMessages');
      
      const emptyState = document.getElementById('emptyState');
      if (emptyState) {
        emptyState.remove();
      }
      
      const messageDiv = document.createElement('div');
      messageDiv.className = `message ${role}`;
      if (!animate) messageDiv.style.animation = 'none';
      
      const avatarText = role === 'user' ? '<%= user.username.charAt(0).toUpperCase() %>' : 'ü§ñ';
      const roleText = role === 'user' ? 'You' : 'AI Assistant';
      
      let actionsHTML = '';
      if (role === 'assistant') {
        const encodedContent = btoa(encodeURIComponent(content));
        actionsHTML = `
          <div class="message-actions">
            <button class="copy-btn" data-content="${encodedContent}" onclick="copyMessageFromData(this)">
              <span>üìã</span><span>Copy</span>
            </button>
          </div>
        `;
      }
      
      messageDiv.innerHTML = `
        <div class="message-avatar">${avatarText}</div>
        <div class="message-content">
          <div class="message-role">${roleText}</div>
          <div class="message-text">${escapeHtml(content)}</div>
          ${actionsHTML}
        </div>
      `;
      
      chatMessages.appendChild(messageDiv);
      scrollToBottom();
    }

    async function sendMessage(event) {
      event.preventDefault();
      if (isStreaming) return;
      const message = messageInput.value.trim();
      if (!message) return;
      appendMessage('user', message);
      messageInput.value = '';
      messageInput.style.height = 'auto';
      isStreaming = true;
      shouldAutoScroll = true;
      messageInput.disabled = true;
      document.getElementById('sendBtn').disabled = true;
      const typingDiv = document.createElement('div');
      typingDiv.className = 'message assistant';
      typingDiv.id = 'typingIndicator';
      typingDiv.innerHTML = `
        <div class="message-avatar">ü§ñ</div>
        <div class="message-content">
          <div class="message-role">AI Assistant</div>
          <div class="typing-indicator">
            <div class="typing-dot"></div>
            <div class="typing-dot"></div>
            <div class="typing-dot"></div>
          </div>
        </div>
      `;
      document.getElementById('chatMessages').appendChild(typingDiv);
      scrollToBottom(true);
      try {
        const response = await fetch('/idea/api/stream', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ chatId: currentChatId, message: message, isNewChat: isNewChat })
        });
        const reader = response.body.getReader();
        const decoder = new TextDecoder();
        document.getElementById('typingIndicator').remove();
        let assistantMessageDiv = null;
        let contentDiv = null;
        let fullContent = '';
        while (true) {
          const { done, value } = await reader.read();
          if (done) break;
          const chunk = decoder.decode(value);
          const lines = chunk.split('\n');
          for (const line of lines) {
            if (line.startsWith('data: ')) {
              try {
                const data = JSON.parse(line.substring(6));
                if (data.type === 'chatId') {
                  currentChatId = data.chatId;
                  isNewChat = false;
                  console.log('New chat created with ID:', currentChatId);
                } else if (data.type === 'title') {
                  document.getElementById('chatTitle').textContent = data.title;
                  setTimeout(() => loadChatHistory(), 500);
                } else if (data.type === 'chunk') {
                  fullContent += data.content;
                  if (!assistantMessageDiv) {
                    assistantMessageDiv = document.createElement('div');
                    assistantMessageDiv.className = 'message assistant';
                    assistantMessageDiv.innerHTML = `
                      <div class="message-avatar">ü§ñ</div>
                      <div class="message-content">
                        <div class="message-role">AI Assistant</div>
                        <div class="message-text"></div>
                      </div>
                    `;
                    document.getElementById('chatMessages').appendChild(assistantMessageDiv);
                    contentDiv = assistantMessageDiv.querySelector('.message-text');
                  }
                  contentDiv.textContent = fullContent;
                  scrollToBottom();
                } else if (data.type === 'done') {
                  const encodedContent = btoa(encodeURIComponent(data.content));
                  const actionsDiv = document.createElement('div');
                  actionsDiv.className = 'message-actions';
                  actionsDiv.innerHTML = `
                    <button class="copy-btn" data-content="${encodedContent}" onclick="copyMessageFromData(this)">
                      <span>üìã</span><span>Copy</span>
                    </button>
                  `;
                  assistantMessageDiv.querySelector('.message-content').appendChild(actionsDiv);
                  scrollToBottom(true);
                } else if (data.type === 'error') {
                  alert('Error: ' + data.message);
                }
              } catch (e) {
                console.error('Error parsing SSE data:', e);
              }
            }
          }
        }
      } catch (error) {
        console.error('Error streaming message:', error);
        document.getElementById('typingIndicator')?.remove();
        alert('Failed to send message');
      } finally {
        isStreaming = false;
        messageInput.disabled = false;
        document.getElementById('sendBtn').disabled = false;
        messageInput.focus();
      }
    }

    function copyMessageFromData(button) {
      const encodedContent = button.getAttribute('data-content');
      const content = decodeURIComponent(atob(encodedContent));
      
      navigator.clipboard.writeText(content).then(() => {
        const originalHTML = button.innerHTML;
        button.classList.add('copied');
        button.innerHTML = '<span>‚úì</span><span>Copied!</span>';
        
        setTimeout(() => {
          button.classList.remove('copied');
          button.innerHTML = originalHTML;
        }, 2000);
      }).catch(err => {
        console.error('Failed to copy:', err);
        alert('Failed to copy text');
      });
    }

    async function loadChatHistory() {
      try {
        const response = await fetch('/idea/api/chats');
        const result = await response.json();
        if (result.success) {
          const chatHistory = document.getElementById('chatHistory');
          chatHistory.innerHTML = '';
          if (result.data.length > 0) {
            result.data.forEach(chat => {
              const chatItem = document.createElement('div');
              chatItem.className = 'chat-item';
              if (chat.id === currentChatId) chatItem.classList.add('active');
              chatItem.setAttribute('data-chat-id', chat.id);
              chatItem.onclick = () => loadChat(chat.id);
              const encodedTitle = escapeHtml(chat.title);
              chatItem.innerHTML = `
                <div class="chat-item-content">
                  <div class="chat-item-title">${encodedTitle}</div>
                  <div class="chat-item-meta">${chat.message_count} messages</div>
                </div>
                <button class="chat-item-delete" onclick="deleteChat(event, ${chat.id})">üóëÔ∏è</button>
              `;
              chatHistory.appendChild(chatItem);
            });
          } else {
            chatHistory.innerHTML = `
              <div style="text-align: center; padding: 2rem 1rem; color: var(--gray-400);">
                <div style="font-size: 2rem; margin-bottom: 0.5rem;">üí≠</div>
                <div style="font-size: 0.875rem;">No chats yet</div>
              </div>
            `;
          }
        }
      } catch (error) {
        console.error('Error loading chat history:', error);
      }
    }

    async function deleteChat(event, chatId) {
      event.stopPropagation();
      if (!confirm('Are you sure you want to delete this chat?')) return;
      try {
        const response = await fetch(`/idea/api/chats/${chatId}`, { method: 'DELETE' });
        const result = await response.json();
        if (result.success) {
          if (currentChatId === chatId) {
            currentChatId = null;
            document.getElementById('chatMessages').innerHTML = '<div class="empty-state" id="emptyState"><div class="empty-state-icon">üí°</div><h3 class="empty-state-title">Mulai Chat Baru</h3><p class="empty-state-text">Masukkan keyword atau topik produk yang ingin kamu buat kontennya.</p></div>';
          }
          document.querySelector(`[data-chat-id="${chatId}"]`).remove();
        } else {
          alert(result.message);
        }
      } catch (error) {
        console.error('Error deleting chat:', error);
        alert('Failed to delete chat');
      }
    }

    function scrollToBottom(force = false) {
      if (shouldAutoScroll || force) {
        const chatMessages = document.getElementById('chatMessages');
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }
    }

    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    window.addEventListener('load', () => {
      const firstChat = document.querySelector('.chat-item');
      if (firstChat) firstChat.click();
    });
  </script>
