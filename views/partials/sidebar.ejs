<style>
  * {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }

  :root {
    --sidebar-bg: linear-gradient(180deg, #1a1f36 0%, #0f1419 100%);
    --sidebar-width: 280px;
    --primary: #D4AF37;
    --primary-light: #E5C158;
    --accent: #B8860B;
    --bronze: #CD7F32;
    --text-primary: #ffffff;
    --text-secondary: #a0aec0;
    --hover-bg: rgba(212, 175, 55, 0.15);
    --active-bg: linear-gradient(90deg, rgba(212, 175, 55, 0.2) 0%, transparent 100%);
    --border-color: rgba(255, 255, 255, 0.08);
    --shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
  }

  body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    background: #f8f9fa;
    overflow-x: hidden;
  }

  .dashboard-container {
    display: flex;
    min-height: 100vh;
  }

  /* Sidebar Styles */
  .sidebar {
    width: var(--sidebar-width);
    background: var(--sidebar-bg);
    display: flex;
    flex-direction: column;
    position: fixed;
    left: 0;
    top: 0;
    height: 100vh;
    z-index: 1000;
    transition: transform 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: var(--shadow);
    overflow: hidden;
  }

  /* Animated background gradient */
  .sidebar::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(212, 175, 55, 0.08) 0%, transparent 70%);
    animation: rotate 20s linear infinite;
    pointer-events: none;
  }

  @keyframes rotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .sidebar-header {
    padding: 2rem 1.5rem;
    border-bottom: 1px solid var(--border-color);
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    z-index: 1;
  }

  .logo-container {
    background: #ffffff;
    padding: 1rem 1.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 16px rgba(212, 175, 55, 0.2);
    transition: all 0.3s ease;
  }

  .logo-container:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 24px rgba(212, 175, 55, 0.3);
  }

  .brand-logo {
    height: 45px;
    width: auto;
    display: block;
    transition: transform 0.3s ease;
  }

  .brand-logo:hover {
    transform: scale(1.05);
  }

  .sidebar-nav {
    flex: 1;
    padding: 1.5rem 0;
    overflow-y: auto;
    position: relative;
    z-index: 1;
  }

  /* Custom scrollbar */
  .sidebar-nav::-webkit-scrollbar {
    width: 4px;
  }

  .sidebar-nav::-webkit-scrollbar-track {
    background: rgba(255, 255, 255, 0.05);
  }

  .sidebar-nav::-webkit-scrollbar-thumb {
    background: rgba(212, 175, 55, 0.5);
    border-radius: 4px;
  }

  .sidebar-nav::-webkit-scrollbar-thumb:hover {
    background: rgba(212, 175, 55, 0.7);
  }

  .nav-section {
    margin-bottom: 2rem;
  }

  .nav-section-title {
    padding: 0.5rem 1.5rem 0.75rem;
    font-size: 0.7rem;
    font-weight: 700;
    color: var(--text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    opacity: 0.6;
  }

  /* ===== NAV LINK (Parent & Regular) ===== */
  .nav-link {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 0.875rem 1.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    margin: 0.25rem 0.75rem;
    border-radius: 12px;
    overflow: hidden;
    cursor: pointer;
  }

  /* Hover glow effect */
  .nav-link::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(212, 175, 55, 0.2), transparent);
    transition: left 0.5s ease;
  }

  .nav-link:hover::before {
    left: 100%;
  }

  .nav-link:hover {
    background: var(--hover-bg);
    color: var(--text-primary);
    transform: translateX(4px);
    box-shadow: 0 4px 12px rgba(212, 175, 55, 0.2);
  }

  .nav-link.active {
    background: var(--active-bg);
    color: var(--text-primary);
    font-weight: 600;
    box-shadow: 0 4px 16px rgba(212, 175, 55, 0.3);
  }

  .nav-link.active::after {
    content: '';
    position: absolute;
    left: 0;
    top: 50%;
    transform: translateY(-50%);
    width: 4px;
    height: 60%;
    background: linear-gradient(180deg, var(--primary) 0%, var(--accent) 100%);
    border-radius: 0 4px 4px 0;
    box-shadow: 0 0 12px rgba(212, 175, 55, 0.6);
  }

  .nav-icon {
    font-size: 1.5rem;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: transform 0.3s ease;
    flex-shrink: 0;
  }

  .nav-link:hover .nav-icon {
    transform: scale(1.1) rotate(5deg);
  }

  .nav-link.active .nav-icon {
    filter: drop-shadow(0 0 8px rgba(212, 175, 55, 0.8));
  }

  .nav-text {
    font-size: 0.9375rem;
    font-weight: 500;
    letter-spacing: 0.01em;
    flex: 1;
  }

  /* ===== PARENT MENU WITH CHILDREN ===== */
  .nav-item {
    position: relative;
  }

  .nav-parent {
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  /* Chevron Icon for Parent */
  .nav-chevron {
    font-size: 0.875rem;
    transition: transform 0.3s ease;
    color: var(--text-secondary);
    margin-left: auto;
    display: flex;
    align-items: center;
  }

  .nav-link.has-children:hover .nav-chevron {
    color: var(--text-primary);
  }

  .nav-link.has-children.open .nav-chevron {
    transform: rotate(180deg);
    color: var(--primary);
  }

  /* ===== SUBMENU (Children) ===== */
  .nav-submenu {
    max-height: 0;
    overflow: hidden;
    transition: max-height 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    background: rgba(0, 0, 0, 0.2);
    border-radius: 0 0 12px 12px;
    margin: 0 0.75rem 0.5rem;
  }

  .nav-submenu.open {
    max-height: 500px;
  }

  .nav-submenu-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem 1rem 0.75rem 3.5rem;
    color: var(--text-secondary);
    text-decoration: none;
    transition: all 0.3s ease;
    position: relative;
    font-size: 0.875rem;
  }

  .nav-submenu-item::before {
    content: '';
    position: absolute;
    left: 2rem;
    top: 50%;
    width: 6px;
    height: 6px;
    background: var(--text-secondary);
    border-radius: 50%;
    transform: translateY(-50%);
    transition: all 0.3s ease;
  }

  .nav-submenu-item:hover {
    color: var(--text-primary);
    padding-left: 4rem;
  }

  .nav-submenu-item:hover::before {
    background: var(--primary);
    width: 8px;
    height: 8px;
    box-shadow: 0 0 8px rgba(212, 175, 55, 0.6);
  }

  .nav-submenu-item.active {
    color: var(--primary);
    font-weight: 600;
  }

  .nav-submenu-item.active::before {
    background: var(--primary);
    width: 8px;
    height: 8px;
    box-shadow: 0 0 12px rgba(212, 175, 55, 0.8);
  }

  .nav-submenu-icon {
    font-size: 1.125rem;
    width: 20px;
    height: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* ===== SIDEBAR FOOTER ===== */
  .sidebar-footer {
    padding: 1.5rem;
    border-top: 1px solid var(--border-color);
    position: relative;
    z-index: 1;
    background: rgba(15, 20, 25, 0.8);
    backdrop-filter: blur(10px);
  }

  .user-info {
