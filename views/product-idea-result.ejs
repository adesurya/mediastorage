<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Idea Result - SIJAGO+ AI</title>
  <link rel="stylesheet" href="/css/style.css">
  <style>
    .content-wrapper {
      padding: 2rem;
      max-width: 100%;
    }

    .page-header {
      margin-bottom: 2rem;
    }

    .page-title {
      font-size: 1.875rem;
      font-weight: 700;
      color: #1a1a1a;
      margin-bottom: 0.5rem;
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .page-subtitle {
      font-size: 0.9375rem;
      color: #6b7280;
    }

    .status-badge {
      display: inline-block;
      padding: 0.5rem 1rem;
      border-radius: 20px;
      font-size: 0.875rem;
      font-weight: 600;
      margin-top: 1rem;
    }

    .status-processing {
      background: #dbeafe;
      color: #1e40af;
    }

    .status-completed {
      background: #d1fae5;
      color: #065f46;
    }

    .status-failed {
      background: #fee2e2;
      color: #991b1b;
    }

    .loading-container {
      background: var(--white);
      border-radius: var(--radius-lg);
      padding: 3rem;
      text-align: center;
      box-shadow: var(--shadow);
      animation: fadeIn 0.5s ease-out;
    }

    .spinner {
      width: 60px;
      height: 60px;
      border: 4px solid var(--gray-200);
      border-top-color: #f59e0b;
      border-radius: 50%;
      animation: spin 1s linear infinite;
      margin: 0 auto 1.5rem;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .content-box {
      background: var(--white);
      border-radius: var(--radius-lg);
      padding: 2rem;
      box-shadow: var(--shadow);
      margin-bottom: 1.5rem;
      animation: fadeIn 0.5s ease-out;
    }

    .content-box h2 {
      font-size: 1.25rem;
      font-weight: 600;
      color: #1a1a1a;
      margin-bottom: 1rem;
      padding-bottom: 0.75rem;
      border-bottom: 2px solid var(--gray-200);
    }

    .result-content {
      line-height: 1.8;
      color: #374151;
      white-space: pre-wrap;
      font-size: 0.9375rem;
    }

    .result-section {
      margin-bottom: 2rem;
    }

    .result-section h3 {
      font-size: 1rem;
      font-weight: 600;
      color: #1f2937;
      margin-bottom: 0.75rem;
    }

    .result-section-content {
      color: #374151;
      line-height: 1.6;
    }

    .highlight-list {
      list-style: none;
      padding: 0;
    }

    .highlight-list li {
      padding: 0.5rem 0;
      padding-left: 1.5rem;
      position: relative;
    }

    .highlight-list li:before {
      content: "‚úì";
      position: absolute;
      left: 0;
      color: #10b981;
      font-weight: bold;
    }

    .streaming-content {
      min-height: 200px;
    }

    .action-buttons {
      display: flex;
      gap: 1rem;
      margin-top: 1.5rem;
      flex-wrap: wrap;
    }

    .btn {
      padding: 0.875rem 1.5rem;
      border-radius: var(--radius-lg);
      font-weight: 600;
      font-size: 0.9375rem;
      cursor: pointer;
      transition: var(--transition);
      display: flex;
      align-items: center;
      gap: 0.5rem;
      border: none;
      text-decoration: none;
      box-shadow: var(--shadow);
    }

    .btn-primary {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
    }

    .btn-primary:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 16px rgba(102, 126, 234, 0.3);
    }

    .btn-warning {
      background: linear-gradient(135deg, #f59e0b 0%, #d97706 100%);
      color: white;
    }

    .btn-warning:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 16px rgba(245, 158, 11, 0.3);
    }

    .btn-success {
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
    }

    .btn-success:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 16px rgba(16, 185, 129, 0.3);
    }

    .copy-notification {
      position: fixed;
      top: 2rem;
      right: 2rem;
      background: linear-gradient(135deg, #10b981 0%, #059669 100%);
      color: white;
      padding: 1rem 1.5rem;
      border-radius: var(--radius-lg);
      box-shadow: 0 8px 24px rgba(16, 185, 129, 0.4);
      display: none;
      align-items: center;
      gap: 0.75rem;
      z-index: 9999;
      animation: slideInRight 0.3s ease;
    }

    @keyframes slideInRight {
      from {
        transform: translateX(100%);
        opacity: 0;
      }
      to {
        transform: translateX(0);
        opacity: 1;
      }
    }

    .copy-notification.show {
      display: flex;
    }

    .error-box {
      background: white;
      border-radius: var(--radius-lg);
      padding: 2rem;
      box-shadow: var(--shadow);
      border-left: 4px solid #ef4444;
    }

    @media (max-width: 768px) {
      .content-wrapper {
        padding: 1rem;
      }

      .action-buttons {
        flex-direction: column;
      }

      .btn {
        width: 100%;
        justify-content: center;
      }
    }
  </style>
</head>
<body>
  <%- include('partials/sidebar', { user: user, currentPage: 'product-idea' }) %>

  <div class="content-wrapper">
    <div class="page-header">
      <h1 class="page-title">
        <span>üí°</span>
        <span>Product Idea Result</span>
      </h1>
      <p class="page-subtitle">AI-generated content strategy for your product</p>
      <div id="statusBadge"></div>
    </div>

    <div id="loadingContainer" class="loading-container" style="display: none;">
      <div class="spinner"></div>
      <p id="loadingText" style="color: #6b7280; font-size: 1rem;"></p>
    </div>

    <div id="resultContainer"></div>
  </div>

  <div id="copyNotification" class="copy-notification">
    <span style="font-size: 1.25rem;">‚úì</span>
    <span>Redirecting to Video Prompting...</span>
  </div>

  <%- include('partials/footer') %>

<script>
  const urlParams = new URLSearchParams(window.location.search);
  const ideaId = urlParams.get('ideaId');
  let checkInterval;
  let generatedData = null;

  async function checkStatus() {
    try {
      const response = await fetch(`/api/product-idea/status/${ideaId}`);
      const data = await response.json();

      if (data.success) {
        updateStatus(data.data.status);

        if (data.data.status === 'completed') {
          clearInterval(checkInterval);
          generatedData = data.data;
          displayResult(data.data);
        } else if (data.data.status === 'failed') {
          clearInterval(checkInterval);
          displayError(data.data.errorMessage);
        } else if (data.data.status === 'processing') {
          clearInterval(checkInterval);
          startStreaming();
        }
      }
    } catch (error) {
      console.error('Check status error:', error);
    }
  }

  function updateStatus(status) {
    const badge = document.getElementById('statusBadge');
    const loadingText = document.getElementById('loadingText');
    const loadingContainer = document.getElementById('loadingContainer');

    let statusClass = '';
    let statusText = '';
    let loadingMessage = '';

    switch(status) {
      case 'processing':
        statusClass = 'status-processing';
        statusText = '‚ú® Generating Ideas...';
        loadingMessage = 'Researching product and creating content strategy... This may take 1-2 minutes.';
        loadingContainer.style.display = 'block';
        break;
      case 'completed':
        statusClass = 'status-completed';
        statusText = '‚úÖ Completed';
        loadingContainer.style.display = 'none';
        break;
      case 'failed':
        statusClass = 'status-failed';
        statusText = '‚ùå Failed';
        loadingContainer.style.display = 'none';
        break;
    }

    badge.className = `status-badge ${statusClass}`;
    badge.textContent = statusText;
    loadingText.textContent = loadingMessage;
  }

  function startStreaming() {
    const resultContainer = document.getElementById('resultContainer');
    resultContainer.innerHTML = `
      <div class="content-box">
        <h2>üìù Generated Content Strategy</h2>
        <div class="result-content streaming-content" id="streamingContent"></div>
      </div>
    `;

    const eventSource = new EventSource(`/api/product-idea/stream/${ideaId}`);
    const streamingContent = document.getElementById('streamingContent');

    eventSource.onmessage = (event) => {
      const data = JSON.parse(event.data);

      if (data.error) {
        eventSource.close();
        displayError(data.error);
        return;
      }

      if (data.done) {
        eventSource.close();
        updateStatus('completed');
        if (data.parsed) {
          // Store complete data
          generatedData = {
            ideKonten: data.parsed.ideKonten,
            highlightPoints: data.parsed.highlightPoints,
            hook: data.parsed.hook,
            value: data.parsed.value,
            cta: data.parsed.cta,
            productUrl: ''
          };
          displayResult(generatedData);
        }
      } else {
        streamingContent.textContent += data.chunk;
      }
    };

    eventSource.onerror = () => {
      eventSource.close();
      console.error('Streaming error');
    };
  }

  function displayResult(data) {
    const resultContainer = document.getElementById('resultContainer');
    
    const highlightPointsHTML = Array.isArray(data.highlightPoints) 
      ? data.highlightPoints.map(point => `<li>${escapeHtml(point)}</li>`).join('')
      : '';
    
    resultContainer.innerHTML = `
      <div class="content-box">
        <h2>üí° IDE KONTEN UTAMA</h2>
        <div class="result-section-content">${escapeHtml(data.ideKonten)}</div>
      </div>

      <div class="content-box">
        <h2>‚ú® HIGHLIGHT POINTS</h2>
        <ul class="highlight-list">
          ${highlightPointsHTML}
        </ul>
      </div>

      <div class="content-box">
        <h2>üé£ HOOK (0-5 detik)</h2>
        <div class="result-section-content">${escapeHtml(data.hook)}</div>
      </div>

      <div class="content-box">
        <h2>üíé VALUE (5-25 detik)</h2>
        <div class="result-section-content">${escapeHtml(data.value)}</div>
      </div>

      <div class="content-box">
        <h2>üì¢ CTA (25-30 detik)</h2>
        <div class="result-section-content">${escapeHtml(data.cta)}</div>
      </div>
    `;

    addActionButtons();
  }

  function addActionButtons() {
    const resultContainer = document.getElementById('resultContainer');
    const buttonsHtml = `
      <div class="content-box">
        <div class="action-buttons">
          <button class="btn btn-warning" onclick="generateVideoPrompt()">
            <span>üé¨</span>
            <span>Generate Video Prompt</span>
          </button>
          <a href="/product-idea" class="btn btn-primary">
            <span>‚Üê</span>
            <span>Back to Generator</span>
          </a>
        </div>
      </div>
    `;
    resultContainer.insertAdjacentHTML('beforeend', buttonsHtml);
  }

  async function generateVideoPrompt() {
    if (!generatedData) {
      alert('No data available');
      return;
    }

    // Fetch complete data including product URL
    try {
      const response = await fetch(`/api/product-idea/status/${ideaId}`);
      const data = await response.json();
      
      if (data.success) {
        generatedData = {
          ideKonten: data.data.ideKonten || '',
          highlightPoints: data.data.highlightPoints || [],
          productUrl: data.data.productUrl || '',
          hook: data.data.hook || '',
          value: data.data.value || '',
          cta: data.data.cta || ''
        };
      }
    } catch (error) {
      console.error('Error fetching complete data:', error);
    }

    console.log('Data to be saved:', generatedData); // Debug

    // Store data in sessionStorage
    const dataToSave = {
      ideKonten: generatedData.ideKonten,
      highlightPoints: generatedData.highlightPoints, // Already an array
      urlProducts: generatedData.productUrl,
      hook: generatedData.hook,
      value: generatedData.value,
      cta: generatedData.cta
    };

    console.log('Saving to sessionStorage:', dataToSave); // Debug
    sessionStorage.setItem('videoPromptingData', JSON.stringify(dataToSave));

    // Verify storage
    const saved = sessionStorage.getItem('videoPromptingData');
    console.log('Verified saved data:', saved); // Debug

    // Show notification
    const notification = document.getElementById('copyNotification');
    notification.classList.add('show');

    // Redirect to video prompting page
    setTimeout(() => {
      window.location.href = '/video-prompting';
    }, 1000);
  }

  function escapeHtml(text) {
    if (!text) return '';
    const div = document.createElement('div');
    div.textContent = text;
    return div.innerHTML;
  }

  function displayError(message) {
    const resultContainer = document.getElementById('resultContainer');
    resultContainer.innerHTML = `
      <div class="error-box">
        <h2 style="color: #991b1b;">‚ùå Generation Failed</h2>
        <p style="color: #991b1b;">${escapeHtml(message || 'An error occurred.')}</p>
        <div class="action-buttons" style="margin-top: 1.5rem;">
          <a href="/product-idea" class="btn btn-primary">
            <span>‚Üê</span>
            <span>Back to Generator</span>
          </a>
        </div>
      </div>
    `;
  }

  // Initialize
  if (ideaId) {
    checkStatus();
    checkInterval = setInterval(checkStatus, 3000);
  } else {
    displayError('No idea ID provided');
  }

  window.addEventListener('beforeunload', () => {
    if (checkInterval) clearInterval(checkInterval);
  });
</script>
</body>
</html>