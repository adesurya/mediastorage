    async function handleImageUpload(type) {
      const formData = new FormData();
      
      if (type === 'product') {
        const file = productImageInput.files[0];
        if (!file) return;
        formData.append('productImage', file);
      } else if (type === 'ref') {
        const file = refImageInput.files[0];
        if (!file) return;
        formData.append('refImage', file);
      }

      // If both are uploaded, include both
      if (productImageInput.files.length && refImageInput.files.length) {
        formData.set('productImage', productImageInput.files[0]);
        formData.set('refImage', refImageInput.files[0]);
      } else if (type === 'product' && productImageInput.files.length) {
        formData.set('productImage', productImageInput.files[0]);
      } else if (type === 'ref' && refImageInput.files.length) {
        // Need product image first
        if (!productImageUrl) {
          showAlert('Please upload product image first', 'error');
          refImageInput.value = '';
          return;
        }
        formData.set('refImage', refImageInput.files[0]);
      }

      try {
        const response = await fetch('/product-shot/upload-images', {
          method: 'POST',
          body: formData
        });

        const data = await response.json();

        if (data.success) {
          if (data.productImageUrl) {
            productImageUrl = data.productImageUrl;
            const reader = new FileReader();
            reader.onload = (e) => {
              productPreviewImage.src = e.target.result;
              productPreviewContainer.classList.add('active');
            };
            reader.readAsDataURL(productImageInput.files[0]);
          }

          if (data.refImageUrl) {
            refImageUrl = data.refImageUrl;
            const reader = new FileReader();
            reader.onload = (e) => {
              refPreviewImage.src = e.target.result;
              refPreviewContainer.classList.add('active');
            };
            reader.readAsDataURL(refImageInput.files[0]);
          }

          showAlert('Image(s) uploaded successfully!', 'success');
        } else {
          showAlert(data.message || 'Failed to upload image', 'error');
        }
      } catch (error) {
        console.error('Error:', error);
        showAlert('An error occurred while uploading', 'error');
      }
    }

