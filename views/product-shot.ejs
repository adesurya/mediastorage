<body>
  <%- include('partials/sidebar', { user: user, currentPage: 'product-shot' }) %>

  <div class="content-wrapper">
    <div class="page-header">
      <h1 class="page-title">
        <span>üì∏</span>
        <span>Product Shot Generator</span>
      </h1>
      <p class="page-subtitle">Create professional product photography with AI-powered scene generation</p>
    </div>

    <div class="content-grid">
      <div class="generator-card">
        <h2 class="card-title">
          <span>‚ú®</span>
          <span>Create Product Shot</span>
        </h2>

        <div id="alertContainer"></div>

        <form id="productShotForm">
          <div class="form-group">
            <label class="form-label">Upload Images</label>
            <div class="upload-grid">
              <!-- Product Image -->
              <div>
                <div class="upload-zone required" id="productUploadZone">
                  <span class="badge badge-required">REQUIRED</span>
                  <div class="upload-icon">üè∑Ô∏è</div>
                  <div class="upload-text">Product Image</div>
                  <div class="upload-hint">PNG, JPG, WEBP</div>
                  <input type="file" id="productImageInput" accept="image/jpeg,image/jpg,image/png,image/webp">
                </div>
                <div id="productPreviewContainer" class="preview-container">
                  <div class="preview-wrapper">
                    <img id="productPreviewImage" src="" alt="Product" class="preview-image">
                    <button type="button" class="remove-preview" onclick="removeProductImage()">√ó</button>
                  </div>
                </div>
              </div>

              <!-- Reference Image -->
              <div>
                <div class="upload-zone optional" id="refUploadZone">
                  <span class="badge badge-optional">OPTIONAL</span>
                  <div class="upload-icon">üñºÔ∏è</div>
                  <div class="upload-text">Reference Image</div>
                  <div class="upload-hint">Background style</div>
                  <input type="file" id="refImageInput" accept="image/jpeg,image/jpg,image/png,image/webp">
                </div>
                <div id="refPreviewContainer" class="preview-container">
                  <div class="preview-wrapper">
                    <img id="refPreviewImage" src="" alt="Reference" class="preview-image">
                    <button type="button" class="remove-preview" onclick="removeRefImage()">√ó</button>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">Scene Description</label>
            <div class="prompt-input-wrapper">
              <textarea 
                id="sceneInput" 
                class="prompt-textarea" 
                placeholder="Contoh: di atas batu, di samping laut, tema gelap dengan pencahayaan dramatis..."
                required
              ></textarea>
              <button type="button" id="optimizeBtn" class="optimize-btn">
                üöÄ Optimize
              </button>
            </div>
          </div>

          <div class="form-group">
            <label class="form-label">Product Placement</label>
            <select id="placementSelect" class="form-select">
              <option value="bottom_center">Bottom Center</option>
              <option value="bottom_left">Bottom Left</option>
              <option value="bottom_right">Bottom Right</option>
              <option value="center">Center</option>
              <option value="top_center">Top Center</option>
              <option value="top_left">Top Left</option>
              <option value="top_right">Top Right</option>
            </select>
          </div>

          <button type="submit" id="generateBtn" class="generate-btn">
            <span>üì∏</span>
            <span>Generate Product Shot</span>
          </button>
        </form>
      </div>

      <div class="result-card">
        <h2 class="card-title">
          <span>üñºÔ∏è</span>
          <span>Result</span>
        </h2>
        
        <div id="resultContainer">
          <div class="result-placeholder">
            <div class="result-placeholder-icon">üì¶</div>
            <p>Your product shot will appear here</p>
          </div>
        </div>
      </div>
    </div>

    <div class="history-section">
      <h2 class="card-title">
        <span>üìú</span>
        <span>Generation History</span>
      </h2>
      <div id="historyGrid" class="history-grid">
        <% if (history && history.length > 0) { %>
          <% history.forEach((item, index) => { %>
            <% if (item.status === 'completed' && item.result_image_url) { %>
              <div class="history-item" onclick="showHistoryImage('<%= item.result_image_url %>', '<%= (item.optimized_description || item.scene_description).replace(/'/g, "\\'") %>')" style="animation-delay: <%= index * 0.05 %>s">
                <img src="<%= item.result_image_url %>" alt="Product Shot" class="history-image" loading="lazy">
                <div class="history-overlay">
                  <div class="history-prompt"><%= item.scene_description.substring(0, 60) %>...</div>
                  <div class="history-date"><%= new Date(item.created_at).toLocaleDateString('id-ID') %></div>
                </div>
              </div>
            <% } %>
          <% }); %>
        <% } else { %>
          <div class="empty-history" style="grid-column: 1 / -1;">
            <div class="empty-history-icon">üì≠</div>
            <p style="font-size: 1.125rem; margin-bottom: 0.5rem; color: var(--gray-600);">No generation history yet</p>
            <p style="font-size: 0.875rem;">Start creating product shots to see them here</p>
          </div>
        <% } %>
      </div>
    </div>
  </div>

  <div id="previewModal" class="preview-modal" onclick="closePreviewModal(event)">
  <div class="preview-modal-content">
    <span class="preview-modal-close" onclick="closePreviewModal()">&times;</span>
    <div id="previewModalBody"></div>
    <div class="preview-modal-actions">
      <button class="preview-modal-btn" onclick="downloadFromModal()">
        ‚¨áÔ∏è Download
      </button>
    </div>
  </div>
</div>

  <%- include('partials/footer') %>

  <script>
    let currentRequestId = null;
    let checkStatusRetries = 0;
    const MAX_RETRIES = 60;
    let productImageUrl = null;
    let refImageUrl = null;

    const productUploadZone = document.getElementById('productUploadZone');
    const productImageInput = document.getElementById('productImageInput');
    const productPreviewContainer = document.getElementById('productPreviewContainer');
    const productPreviewImage = document.getElementById('productPreviewImage');

    const refUploadZone = document.getElementById('refUploadZone');
    const refImageInput = document.getElementById('refImageInput');
    const refPreviewContainer = document.getElementById('refPreviewContainer');
    const refPreviewImage = document.getElementById('refPreviewImage');

    const optimizeBtn = document.getElementById('optimizeBtn');
    const generateBtn = document.getElementById('generateBtn');
    const sceneInput = document.getElementById('sceneInput');
    const placementSelect = document.getElementById('placementSelect');
    const productShotForm = document.getElementById('productShotForm');
    const resultContainer = document.getElementById('resultContainer');
    const alertContainer = document.getElementById('alertContainer');

    function showAlert(message, type = 'info') {
      alertContainer.innerHTML = `<div class="alert alert-${type}"><span>${type === 'success' ? '‚úÖ' : type === 'error' ? '‚ùå' : '‚ÑπÔ∏è'}</span>${message}</div>`;
      setTimeout(() => {
        alertContainer.innerHTML = '';
      }, 5000);
    }

    // Product Image Upload
    productUploadZone.addEventListener('click', () => productImageInput.click());
    productUploadZone.addEventListener('dragover', (e) => {
      e.preventDefault();
      productUploadZone.classList.add('dragover');
    });
    productUploadZone.addEventListener('dragleave', () => {
      productUploadZone.classList.remove('dragover');
    });
    productUploadZone.addEventListener('drop', (e) => {
      e.preventDefault();
      productUploadZone.classList.remove('dragover');
