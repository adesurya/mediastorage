    right: 0;
    color: white;
    font-size: 32px;
    font-weight: bold;
    cursor: pointer;
    background: rgba(0, 0, 0, 0.5);
    width: 40px;
    height: 40px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    transition: var(--transition);
  }

  .preview-modal-close:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: rotate(90deg);
  }

  .preview-modal-actions {
    position: absolute;
    bottom: -50px;
    left: 0;
    right: 0;
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .preview-modal-btn {
    padding: 0.75rem 1.5rem;
    background: rgba(255, 255, 255, 0.9);
    color: #1f2937;
    border: none;
    border-radius: 8px;
    font-weight: 600;
    cursor: pointer;
    transition: var(--transition);
  }

  .preview-modal-btn:hover {
    background: white;
    transform: translateY(-2px);
  }

  /* Processing Item Styles */
  .processing-item {
    border: 2px dashed var(--primary);
    background: linear-gradient(135deg, rgba(99, 102, 241, 0.05), rgba(99, 102, 241, 0.1));
  }

  .processing-spinner-container {
    width: 100%;
    aspect-ratio: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: var(--gray-50);
    gap: 1rem;
  }

  .processing-status-text {
    font-size: 0.75rem;
    color: var(--primary);
    font-weight: 600;
    text-align: center;
    padding: 0 0.5rem;
  }

  .processing-time {
    font-size: 0.625rem;
    color: var(--gray-500);
  }

  .failed-item {
    border: 2px solid #fecaca;
    background: #fee2e2;
  }

  .failed-icon-container {
    width: 100%;
    aspect-ratio: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    background: #fee2e2;
    gap: 0.5rem;
  }

  .failed-icon {
    font-size: 3rem;
  }

  .failed-text {
    font-size: 0.75rem;
    color: #991b1b;
    font-weight: 600;
  }

  /* Status Badge */
  .status-badge {
    position: absolute;
    top: 0.5rem;
    right: 0.5rem;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.625rem;
    font-weight: 700;
    text-transform: uppercase;
    z-index: 10;
  }

  .status-badge.processing {
    background: linear-gradient(135deg, #667eea, #764ba2);
    color: white;
    animation: pulse 2s infinite;
  }

  .status-badge.completed {
