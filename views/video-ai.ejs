<body>
  <%- include('partials/sidebar', { user: user, currentPage: 'video-ai' }) %>

  <div class="content-wrapper">
    <div class="page-header">
      <h1 class="page-title">
        <span>üé¨</span>
        <span>Video AI Generator</span>
      </h1>
      <p class="page-subtitle">Transform your images into stunning AI-powered videos</p>
    </div>

    <div class="content-grid">
