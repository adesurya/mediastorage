        <h2 class="card-title">
          <span>üé•</span>
          <span>Result</span>
        </h2>
        
        <div id="resultContainer">
          <div class="result-placeholder">
            <div class="result-placeholder-icon">üéûÔ∏è</div>
            <p>Your generated video will appear here</p>
          </div>
        </div>
      </div>
    </div>

    <div class="history-section">
      <h2 class="card-title">
        <span>üìú</span>
        <span>Generation History</span>
      </h2>
      <div id="historyGrid" class="history-grid">
        <% if (history && history.length > 0) { %>
          <% history.forEach((item, index) => { %>
            <% if (item.status === 'completed' && item.video_url) { %>
              <div class="history-item" onclick="showHistoryVideo('<%= item.video_url %>', '<%= (item.optimized_prompt || item.prompt).replace(/'/g, "\\'") %>')" style="animation-delay: <%= index * 0.05 %>s">
                <video class="history-video" muted loop onmouseover="this.play()" onmouseout="this.pause()">
                  <source src="<%= item.video_url %>" type="video/mp4">
                </video>
                <div class="history-overlay">
                  <div class="history-prompt"><%= item.prompt.substring(0, 60) %>...</div>
                  <div class="history-date"><%= new Date(item.created_at).toLocaleDateString('id-ID') %></div>
                </div>
              </div>
            <% } %>
          <% }); %>
        <% } else { %>
          <div class="empty-history" style="grid-column: 1 / -1;">
            <div class="empty-history-icon">üì≠</div>
