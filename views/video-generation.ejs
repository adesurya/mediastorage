<%- include('partials/sidebar', { currentPage: 'video-generation' }) %>

<style>
  .video-gen-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem;
  }

  .page-header {
    text-align: center;
    margin-bottom: 3rem;
  }

  .page-title {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #D4AF37 0%, #B8860B 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 0.5rem;
  }

  .page-subtitle {
    font-size: 1.1rem;
    color: #6b7280;
  }

  .title-input-group {
    max-width: 800px;
    margin: 0 auto 2rem;
  }

  .title-input {
    width: 100%;
    padding: 1rem 1.5rem;
    font-size: 1.1rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    transition: all 0.3s;
  }

  .title-input:focus {
    outline: none;
    border-color: #D4AF37;
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  }

  .scenes-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .scene-card {
    background: white;
    border-radius: 16px;
    padding: 1.5rem;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.07);
    border: 2px solid #f3f4f6;
    transition: all 0.3s;
  }

  .scene-card:hover {
    box-shadow: 0 8px 16px rgba(212, 175, 55, 0.15);
    border-color: #D4AF37;
  }

  .scene-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 2px solid #f3f4f6;
  }

  .scene-number {
    font-size: 1.25rem;
    font-weight: 700;
    color: #D4AF37;
  }

  .remove-scene-btn {
    background: #ef4444;
    color: white;
    border: none;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    cursor: pointer;
    font-size: 0.875rem;
    transition: all 0.3s;
  }

  .remove-scene-btn:hover {
    background: #dc2626;
    transform: scale(1.05);
  }

  .upload-group {
    margin-bottom: 1.5rem;
  }

  .upload-label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: #374151;
  }

  .optional-badge {
    display: inline-block;
    background: #fef3c7;
    color: #92400e;
    padding: 0.25rem 0.5rem;
    border-radius: 6px;
    font-size: 0.75rem;
    margin-left: 0.5rem;
  }

  .upload-area {
    border: 2px dashed #d1d5db;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
    cursor: pointer;
    transition: all 0.3s;
    background: #f9fafb;
  }

  .upload-area:hover {
    border-color: #D4AF37;
    background: #FFF9E6;
  }

  .upload-area.has-file {
    border-color: #10b981;
    background: #f0fdf4;
  }

  .upload-icon {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .upload-text {
    color: #6b7280;
    font-size: 0.875rem;
  }

  .preview-image {
    max-width: 100%;
    max-height: 200px;
    border-radius: 8px;
    margin-top: 1rem;
  }

  .prompt-textarea {
    width: 100%;
    padding: 1rem;
    border: 2px solid #e5e7eb;
    border-radius: 12px;
    resize: vertical;
    min-height: 100px;
    font-family: inherit;
    transition: all 0.3s;
  }

  .prompt-textarea:focus {
    outline: none;
    border-color: #D4AF37;
    box-shadow: 0 0 0 3px rgba(212, 175, 55, 0.1);
  }

  .actions-container {
    max-width: 800px;
    margin: 0 auto;
    display: flex;
    gap: 1rem;
    justify-content: center;
  }

  .btn {
    padding: 1rem 2rem;
    border-radius: 12px;
    font-weight: 600;
    font-size: 1rem;
    border: none;
    cursor: pointer;
    transition: all 0.3s;
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .btn-primary {
    background: linear-gradient(135deg, #D4AF37 0%, #B8860B 100%);
    color: white;
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 16px rgba(212, 175, 55, 0.3);
  }

  .btn-secondary {
    background: #6b7280;
    color: white;
  }

  .btn-secondary:hover {
    background: #4b5563;
    transform: translateY(-2px);
  }

  .btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .add-scene-btn {
    max-width: 400px;
    margin: 0 auto 2rem;
    display: block;
    width: 100%;
    background: #10b981;
    color: white;
  }

  .add-scene-btn:hover {
    background: #059669;
  }

  .loading {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.7);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  .loading.active {
    display: flex;
  }

  .loading-content {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
  }

  .spinner {
    width: 50px;
    height: 50px;
    border: 4px solid #f3f4f6;
    border-top: 4px solid #D4AF37;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem;
  }

  @keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
  }
</style>

<div class="video-gen-container">
  <div class="page-header">
    <h1 class="page-title">üé¨ Video Generation</h1>
    <p class="page-subtitle">Buat video AI dari gambar dan prompt Anda (1-6 scenes)</p>
  </div>

  <form id="videoGenForm">
    <!-- Title Input -->
    <div class="title-input-group">
      <input 
        type="text" 
        class="title-input" 
        id="titleInput" 
        placeholder="Masukkan judul project video..." 
        required
      >
    </div>

    <!-- Scenes Container -->
    <div class="scenes-container" id="scenesContainer">
      <!-- Scene 1 (default) -->
      <div class="scene-card" data-scene="1">
        <div class="scene-header">
          <span class="scene-number">üéØ Scene 1</span>
        </div>

        <div class="upload-group">
          <label class="upload-label">Gambar 1</label>
          <div class="upload-area" onclick="document.getElementById('scene1_image1').click()">
            <div class="upload-icon">üì∏</div>
            <div class="upload-text">Klik untuk upload gambar</div>
            <input type="file" id="scene1_image1" accept="image/*" style="display:none" required>
          </div>
          <img class="preview-image" id="preview1_image1" style="display:none">
        </div>

        <div class="upload-group">
          <label class="upload-label">
            Gambar 2 
            <span class="optional-badge">Optional</span>
          </label>
          <div class="upload-area" onclick="document.getElementById('scene1_image2').click()">
            <div class="upload-icon">üì∏</div>
            <div class="upload-text">Klik untuk upload gambar</div>
            <input type="file" id="scene1_image2" accept="image/*" style="display:none">
          </div>
          <img class="preview-image" id="preview1_image2" style="display:none">
        </div>

        <div class="upload-group">
          <label class="upload-label">Prompt</label>
          <textarea 
            class="prompt-textarea" 
            id="scene1_prompt" 
            placeholder="Deskripsikan gerakan dan aksi yang diinginkan..."
            required
          ></textarea>
        </div>
      </div>
    </div>

    <!-- Add Scene Button -->
    <button type="button" class="btn add-scene-btn" id="addSceneBtn">
      ‚ûï Tambah Scene
    </button>

    <!-- Actions -->
    <div class="actions-container">
      <button type="button" class="btn btn-secondary" onclick="window.location.href='/video-generation-history'">
        üìã Lihat History
      </button>
      <button type="submit" class="btn btn-primary" id="generateBtn">
        üöÄ Generate Video
      </button>
    </div>
  </form>
</div>

<!-- Loading Overlay -->
<div class="loading" id="loadingOverlay">
  <div class="loading-content">
    <div class="spinner"></div>
    <h3>Memproses Video Generation...</h3>
    <p>Mohon tunggu sebentar</p>
  </div>
</div>

<%- include('partials/footer') %>

<script>
  let sceneCount = 1;
  const MAX_SCENES = 6;

  // Add scene
  document.getElementById('addSceneBtn').addEventListener('click', function() {
    if (sceneCount >= MAX_SCENES) {
      alert('Maksimal 6 scenes!');
      return;
    }

    sceneCount++;
    const scenesContainer = document.getElementById('scenesContainer');
    
    const sceneCard = document.createElement('div');
    sceneCard.className = 'scene-card';
    sceneCard.setAttribute('data-scene', sceneCount);
    sceneCard.innerHTML = `
      <div class="scene-header">
        <span class="scene-number">üéØ Scene ${sceneCount}</span>
        <button type="button" class="remove-scene-btn" onclick="removeScene(${sceneCount})">
          ‚ùå Hapus
        </button>
      </div>

      <div class="upload-group">
        <label class="upload-label">Gambar 1</label>
        <div class="upload-area" onclick="document.getElementById('scene${sceneCount}_image1').click()">
          <div class="upload-icon">üì∏</div>
          <div class="upload-text">Klik untuk upload gambar</div>
          <input type="file" id="scene${sceneCount}_image1" accept="image/*" style="display:none" required>
        </div>
        <img class="preview-image" id="preview${sceneCount}_image1" style="display:none">
      </div>

      <div class="upload-group">
        <label class="upload-label">
          Gambar 2 
          <span class="optional-badge">Optional</span>
        </label>
        <div class="upload-area" onclick="document.getElementById('scene${sceneCount}_image2').click()">
          <div class="upload-icon">üì∏</div>
          <div class="upload-text">Klik untuk upload gambar</div>
          <input type="file" id="scene${sceneCount}_image2" accept="image/*" style="display:none">
        </div>
        <img class="preview-image" id="preview${sceneCount}_image2" style="display:none">
      </div>

      <div class="upload-group">
        <label class="upload-label">Prompt</label>
        <textarea 
          class="prompt-textarea" 
          id="scene${sceneCount}_prompt" 
          placeholder="Deskripsikan gerakan dan aksi yang diinginkan..."
          required
        ></textarea>
      </div>
    `;

    scenesContainer.appendChild(sceneCard);
    setupImagePreview(sceneCount);

    if (sceneCount >= MAX_SCENES) {
      this.style.display = 'none';
    }
  });

  // Remove scene
  function removeScene(sceneNum) {
    const sceneCard = document.querySelector(`[data-scene="${sceneNum}"]`);
    sceneCard.remove();
    sceneCount--;
    
    document.getElementById('addSceneBtn').style.display = 'block';
  }

  // Setup image preview for scene
  function setupImagePreview(sceneNum) {
    ['image1', 'image2'].forEach(imgType => {
      const input = document.getElementById(`scene${sceneNum}_${imgType}`);
      const preview = document.getElementById(`preview${sceneNum}_${imgType}`);
      const uploadArea = input.parentElement;

      input.addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
          const reader = new FileReader();
          reader.onload = function(e) {
            preview.src = e.target.result;
            preview.style.display = 'block';
            uploadArea.classList.add('has-file');
          };
          reader.readAsDataURL(file);
        }
      });
    });
  }

  // Initialize scene 1 preview
  setupImagePreview(1);

  // Form submission
  document.getElementById('videoGenForm').addEventListener('submit', async function(e) {
    e.preventDefault();

    const title = document.getElementById('titleInput').value.trim();
    if (!title) {
      alert('Judul project harus diisi!');
      return;
    }

    // Collect scenes data
    const scenes = [];
    for (let i = 1; i <= sceneCount; i++) {
      const sceneCard = document.querySelector(`[data-scene="${i}"]`);
      if (!sceneCard) continue;

      const prompt = document.getElementById(`scene${i}_prompt`)?.value.trim();
      const image1 = document.getElementById(`scene${i}_image1`)?.files[0];

      if (!prompt || !image1) {
        alert(`Scene ${i}: Prompt dan Gambar 1 harus diisi!`);
        return;
      }

      scenes.push({ prompt });
    }

    if (scenes.length === 0) {
      alert('Minimal 1 scene harus diisi!');
      return;
    }

    // Create FormData
    const formData = new FormData();
    formData.append('title', title);
    formData.append('scenes', JSON.stringify(scenes));

    // Append images
    for (let i = 1; i <= sceneCount; i++) {
      const sceneCard = document.querySelector(`[data-scene="${i}"]`);
      if (!sceneCard) continue;

      const image1 = document.getElementById(`scene${i}_image1`)?.files[0];
      const image2 = document.getElementById(`scene${i}_image2`)?.files[0];

      if (image1) formData.append(`scene${i}_image1`, image1);
      if (image2) formData.append(`scene${i}_image2`, image2);
    }

    // Show loading
    document.getElementById('loadingOverlay').classList.add('active');

    try {
      const response = await fetch('/api/video-generation/generate', {
        method: 'POST',
        body: formData
      });

      const result = await response.json();

      if (result.success) {
        alert('‚úÖ Video generation dimulai! Cek hasil di History dalam 2-3 menit.');
        window.location.href = '/video-generation-history';
      } else {
        alert('‚ùå Error: ' + result.message);
      }
    } catch (error) {
      alert('‚ùå Error: ' + error.message);
    } finally {
      document.getElementById('loadingOverlay').classList.remove('active');
    }
  });
</script>
